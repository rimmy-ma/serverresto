<div class="container mt-5">
        <h2>Notre plaisir est de vous satisfaire!!!</h2>
        <div class="row">
            {{#each produit}}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="{{this.chemin_image}}" class="card-img-top" alt="Plate">
                    <div class="card-body">
                        <h5 class="card-title">{{this.nom}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary" id="{{this.id_produit}}"  {{#unless ../user}}disabled{{/unless}}>Ajouter au panier</button>
                            </div>
                            <small class="text-muted">{{this.prix}} $</small>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>